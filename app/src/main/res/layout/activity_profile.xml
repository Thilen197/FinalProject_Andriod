<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".profile">


    <TextView
        android:layout_marginStart="140dp"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="497dp"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/tvprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="280dp"
            android:text="Edit Profile."
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_textview"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvcustomerusername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"

            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="#bbb"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_textview"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvcustomeremail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="#bbb"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_textview"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvcustomerphone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="#bbb"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:layout_width="410dp"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/ichome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/icwatch"
            android:layout_marginStart="35dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_watch" />

        <ImageView
            android:id="@+id/iccart"
            android:layout_marginStart="35dp"
            android:src="@drawable/ic_cart"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/icprofile"
            android:layout_marginStart="35dp"
            android:src="@drawable/ic_user"
            android:layout_width="60dp"
            android:layout_height="60dp"/>


    </LinearLayout>




</LinearLayout>